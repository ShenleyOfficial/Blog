---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allPosts = await getCollection("blog");
const categories = [...new Set(allPosts.map((post) => post.data.category))];
---

<Layout>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-primary dark:text-primary-dark mb-8 text-center">文章分类</h1>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {categories.map((category) => {
        const postsInCategory = allPosts.filter(
          (post) => post.data.category === category
        );
        return (
          <div class="bg-background-secondary dark:bg-background-secondary-dark rounded-lg p-6 shadow-lg hover:shadow-xl transition duration-300">
            <h2 class="text-2xl font-bold text-primary mb-4">{category}</h2>
            <p class="text-text-secondary mb-4">
              共 {postsInCategory.length} 篇文章
            </p>
            <ul class="space-y-2">
              {postsInCategory.map((post) => (
                <li>
                  <a
                    href={`/posts/${post.id}/`}
                    class="text-text hover:text-primary dark:text-text-dark transition duration-300"
                  >
                    {post.data.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        );
      })}
    </div>
  </div>
</Layout>