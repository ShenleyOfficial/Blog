---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { render } from "astro:content";
import { formatDate } from "../../utils/formatDate";
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await render(post);
const formattedCreateDate = formatDate(post.data.createdDate);
const formattedUpdateDate = formatDate(post.data.updatedDate);
---

<Layout>
  <article class="container mx-auto px-4 py-8 max-w-3xl">
    <h1 class="text-primary font-bold text-3xl">{post.data.title}</h1>
    <div class="text-sm text-text-secondary space-x-4">
      <span>创建于: {formattedCreateDate}</span>
      <span>更新于: {formattedUpdateDate}</span>
      <span>作者: {post.data.author}</span>
      <span>分类: {post.data.category}</span>
    </div>
    <div class="prose prose-invert max-w-none text-text py-8">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .prose {
    --tw-prose-body: #ffffff;
    --tw-prose-headings: var(--color-primary);
    --tw-prose-links: var(--color-accent);
    --tw-prose-bold: #ffffff;
    --tw-prose-counters: #ffffff;
    --tw-prose-bullets: #ffffff;
    --tw-prose-quotes: #ffffff;
    --tw-prose-code: #ffffff;
    --tw-prose-hr: #333333;
    --tw-prose-th-borders: #333333;
    --tw-prose-td-borders: #333333;
  }
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    color: var(--color-primary);
    font-weight: bold;
    margin-top: 2em;
    margin-bottom: 1em;
  }
  .prose :global(h1) {
    font-size: 2em;
  }
  .prose :global(h2) {
    font-size: 1.5em;
  }
  .prose :global(h3) {
    font-size: 1.25em;
  }
  .prose :global(h4) {
    font-size: 1em;
  }
  .prose :global(h5) {
    font-size: 0.875em;
  }
  .prose :global(h6) {
    font-size: 0.85em;
  }
  .prose :global(a) {
    text-decoration: none;
  }

  .prose :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .prose :global(img) {
    margin: 2rem auto;
    border-radius: 0.5rem;
  }

  .prose :global(code) {
    background-color: var(--color-background-secondary);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose :global(pre) {
    background-color: var(--color-background-secondary);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }

  .prose :global(pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
  }
</style>
