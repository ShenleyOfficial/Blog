---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="min-h-screen flex flex-col items-center justify-center bg-background">
    <h1 class="text-5xl font-bold text-primary mb-12 text-center">欢迎来到 ShenleyのBlog</h1>
    <div class="flex gap-6">
      <a
        href="/blog"
        class="px-6 py-3 bg-primary text-text-dark rounded-lg font-semibold hover:bg-primary-hover transition duration-300 ease-in-out transform hover:scale-105"
      >
        前往博客
      </a>
      <a
        href="/about"
        class="px-6 py-3 bg-primary text-text-dark rounded-lg font-semibold hover:bg-primary-hover transition duration-300 ease-in-out transform hover:scale-105"
      >
        关于我
      </a>
    </div>
  </main>
</Layout>
