---
import Navigation from "./Navigation.astro";
import DarkMode from "./DarkMode.astro";
import MenuButton from "./MenuButton.astro";
---

<header
  class="flex items-center justify-between p-4 bg-background-secondary dark:bg-background-secondary-dark"
>
  <div class="flex items-center gap-4">
    <MenuButton />
    <a
      href="/"
      class="flex-shrink-0 px-4 py-2 text-xl text-primary font-bold hover:text-primary-light hover:bg-background-hover dark:text-primary-dark dark:hover:bg-background-hover-dark rounded transition duration-300 ease-in-out"
      >Shenley„ÅÆBlog</a
    >
  </div>

  <div class="hidden lg:block absolute left-1/2 -translate-x-1/2">
    <Navigation />
  </div>

  <div class="flex items-center">
    <div
      id="mobile-nav"
      class="mobile-nav hidden lg:hidden absolute top-full left-0 w-full bg-background-secondary dark:bg-background-secondary-dark shadow-lg z-50"
    >
      <div class="p-4">
        <Navigation />
      </div>
    </div>
    <DarkMode />
  </div>
</header>

<style>
  header {
    position: relative;
  }

  .mobile-nav {
    transform-origin: top;
    transition: all 0.3s ease-in-out;
  }
</style>
