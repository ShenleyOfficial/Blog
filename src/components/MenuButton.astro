---
interface Props {
  isOpen: boolean;
  onClick: string;
}

const { isOpen, onClick } = Astro.props;
---

<button
  type="button"
  class="lg:hidden p-2 rounded-md hover:bg-background-hover dark:hover:bg-background-hover-dark transition-colors duration-200"
  aria-label={isOpen ? "关闭菜单" : "打开菜单"}
  onclick={onClick}
>
  <div class="w-6 h-5 relative flex flex-col justify-between transform duration-300 ease-in-out">
    <span
      class:list={[
        "w-full h-0.5 bg-text dark:bg-text-dark rounded-full transform duration-300 ease-in-out",
        { "rotate-45 translate-y-2": isOpen },
      ]}
    ></span>
    <span
      class:list={[
        "w-full h-0.5 bg-text dark:bg-text-dark rounded-full transform duration-300 ease-in-out",
        { "opacity-0": isOpen },
      ]}
    ></span>
    <span
      class:list={[
        "w-full h-0.5 bg-text dark:bg-text-dark rounded-full transform duration-300 ease-in-out",
        { "-rotate-45 -translate-y-2": isOpen },
      ]}
    ></span>
  </div>
</button>

<style>
  button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>