---
interface Props {
  title: string;
  url: string;
  description: string;
  tags?: string[];
  date?: string;
  updated?: string;
  imageUrl?: string;
}

const { title, url, description } = Astro.props;
---

<article class="flex flex-col items-center py-4">
  <a href={url} class="flex flex-col rounded transition duration-300 ease-in-out px-20 py-10">
    <h2 class="font-bold py-4 text-3xl">{title}</h2>
    <p>{description}</p>
  </a>
</article>

<style>
  a {
    color: var(--color-a);
    text-decoration: none;
  }
  a:hover {
    background-color: var(--color-background-hover);
  }
</style>
