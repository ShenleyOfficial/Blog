---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<li>
  <a
    href={href}
    class="text-secondary hover:text-secondary-light hover:bg-background-secondary-hover dark:text-secondary-dark dark:bg-background-secondary-hover-dark px-4 py-2 rounded transition duration-300 ease-in-out"
  >
    {text}
  </a>
</li>